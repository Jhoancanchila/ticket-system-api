# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=development
PORT=3000
API_VERSION=v1

# ========================================
# DATABASE CONFIGURATION
# ========================================
# Opción 1: Usar URL de conexión completa (Neon, Railway, Render, etc.)
DATABASE_URL= aqui tu_url_de_conexion_a_la_base_de_datos

# Opción 2: Configuración individual (Docker local)
# Comenta DATABASE_URL si usas esta opción
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ticket_system
DB_USER=postgres
DB_PASSWORD=

# SSL requerido para bases de datos en la nube
DB_SSL=true

# ========================================
# JWT CONFIGURATION
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-min-32-chars
JWT_REFRESH_EXPIRES_IN=7d

# ========================================
# RESEND EMAIL SERVICE
# ========================================
NODEMAILER_API_KEY=re_your_api_key_here
FROM_EMAIL=onboarding@resend.dev
FROM_NAME=Sistema de Tickets

# ========================================
# CORS CONFIGURATION
# ========================================
CORS_ORIGIN=http://localhost:5173

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=debug
